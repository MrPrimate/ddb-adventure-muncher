{
  "name": "ddb-adventure-muncher",
  "version": "0.2.4",
  "description": "D&D Beyond Adventure Muncher for Foundry Virtual Tabletop",
  "repository": "https://github.com/MrPrimate/ddb-adventure-muncher",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=DEV electron .",
    "lint": "npx eslint ./",
    "lint-fix": "npx eslint ./ --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-l": "electron-builder -l --publish never",
    "dist-w": "electron-builder -w --publish never",
    "dist-wl": "electron-builder -wl --publish never",
    "dist-m": "electron-builder -m --publish never",
    "github-dist-m": "electron-builder -m",
    "docs": "pandoc README.md -f markdown --css=build/pandoc.css -t html5 --self-contained -o dist/index.html"
  },
  "build": {
    "appId": "ddb-adventure-munch",
    "copyright": "Copyright Â© 2021 Jack Holloway",
    "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
    "npmRebuild": false,
    "extraFiles": [
      {
        "from": "content/templates",
        "to": "resources/content/templates",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "content/scene_info",
        "to": "resources/content/scene_info",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "content/note_info",
        "to": "resources/content/note_info",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "content/icons/icon.png",
        "to": "resources/content/icon.png",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "content/icons",
        "to": "content/icons",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "entitlementsInherit": "./build/entitlements.mac.inherit.plist",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "keywords": [],
  "author": {
    "name": "Jack Holloway",
    "email": "jack@mrprimate.co.uk"
  },
  "homepage": "https://github.com/mrprimate",
  "license": "MIT",
  "devDependencies": {
    "electron": "^12.0.9",
    "electron-builder": "^22.10.5",
    "electron-reload": "^1.5.0",
    "eslint": "^7.27.0",
    "spectre.css": "^0.5.9"
  },
  "dependencies": {
    "@journeyapps/sqlcipher": "^5.2.0",
    "electron-updater": "^4.3.9",
    "extract-zip": "^2.0.1",
    "fs-extra": "^9.1.0",
    "image-size": "^0.9.7",
    "jsdom": "^16.6.0",
    "jszip": "^3.6.0",
    "lodash": "^4.17.21",
    "yargs": "^16.2.0"
  }
}
